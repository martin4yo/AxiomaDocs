PORT=5000
JWT_SECRET=your-secret-key-change-in-production
NODE_ENV=development

# Configuración de base de datos MySQL
# IMPORTANTE: Configura estos valores según tu instalación de MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=axiomadocs
DB_USER=root
DB_PASSWORD=tu_password_mysql_aqui

# Configuración de comportamiento de BD
# DB_FORCE_RESET=true    # Solo usar para resetear completamente la BD
# DB_ALLOW_ALTER=false   # Usar false para prevenir cambios de esquema automáticos

# Notas:
# 1. Crea la base de datos axiomadocs antes de ejecutar la aplicación
# 2. Ajusta DB_PASSWORD con tu contraseña de MySQL
# 3. Si usas otro usuario, actualiza DB_USER
